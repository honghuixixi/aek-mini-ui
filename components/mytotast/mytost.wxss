.mytost-mask {
  position: fixed;
  z-index: 9998;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2);
  display: table;
  transition: opacity .3s ease;
}

.mytost-wrapper {
  display: table-cell;
  vertical-align: middle;
}

.mytost-container {
  max-width: 60%;
  margin: 0px auto;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, .33);
  transition: all .3s ease;
  font-size: 28rpx;
  line-height: 48rpx;
  background-color: rgba(0, 0, 0, .8);
  color: #fff;
  text-align: center;
}