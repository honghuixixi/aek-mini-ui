@import "/components/mycard/mycard.wxss";
@import "/components/deptlist/deptlist.wxss";
@import "/components/loading/loading.wxss";
@import "/components/nolimits/nolimits.wxss";
@import "/components/mytotast/mytotast.wxss";
page{
  height: 100%;
  background: #f3f3f5;
  width: 100%;
  position: relative;
}
.assestlit{
  padding-top:25rpx;
}
.over{
  overflow: hidden;   
  height: 100%;
}
.search{
  height: 88rpx;
  background: #508cee;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}
.input{
  height: 64rpx;
  width: 500rpx;
  border-radius: 32rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  align-items: center;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.input image{
  width: 35rpx;
  height: 35rpx;
  margin-right:20rpx;
  }
.choose image{
  width: 27rpx;
  height:25rpx;
}
.choose text{
  font-size: 32rpx;
  color: #fff;
  margin-right: 12rpx;
  margin-left: 22rpx;
}
.palce-class{
  font-size: 28rpx;
  color: #bebebe;
}
.list{
  margin-top: 88rpx;
  margin-bottom: 30rpx;
}

/* 筛选弹窗 */
.filter{
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  overflow: hidden;
}
.black{
  width: 20%;
  background: rgba(0,0,0,.5);
  height: 100%;
}
.right{
  width: 80%;
  background: #f3f3f5;
  height: 100%;
}
.header{
  height: 87rpx;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 28rpx;
  color: #999;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.center{
  background: #fff;
 
}
.top{
   padding: 30rpx;
}
.top-title{
  font-size: 32rpx;
  color: #999;
}
.tag{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  flex-wrap:wrap;
  }
.statusLi{
  width: 254rpx;
  height: 86rpx;
  border: 1rpx solid #999;
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
  text-align: center;
  line-height: 86rpx;
  border-radius: 8rpx;
}
.tag .statusLi:nth-child(2n+1){
  margin-right: 25rpx;
}
.bootom{
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  margin-top: 30rpx;
  height: 86rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.bootom text:first-child{
  font-size: 32rpx;
  color:#333;
  /* width: 30%; */
}
.bootom image{
  width: 16rpx;
  height: 25rpx;
}
.bootom view:last-child{
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.bootom view:last-child text{
  font-size: 32rpx;
  color: #666;
  margin-right: 20rpx;
  max-width: 288rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  height: 42rpx;
}
.botton{
  height: 88rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-content: center;
}
.botton view{
  height: 86rpx ;
  width: 250rpx;
  border: 1rpx solid #508cee;
  border-radius: 8rpx;
  color:#508cee;
  text-align: center;
  line-height: 86rpx;
}
.botton view:first-child{
  margin-right: 30rpx;
  color: #fff;
  background: #508cee;  
}
.active{
  border: 1px solid #508cee;
  color: #508cee;
}
/* 悬浮按钮样式
 */
 .add{
   position: fixed;
   bottom: 50rpx;
   right: 50rpx;
 }
 .add image{
   width: 108rpx;
   height: 108rpx;
 }
 .nomore{
   font-size: 28rpx;
   text-align: center;
   color: #999;
   padding-top: 20rpx;
 }
.pull image{
  width: 42rpx;
  height: 42rpx;
}
.pull{
  margin-bottom: 60rpx;
}
/* 悬浮按钮 */
.tagh{
  position:fixed;
  right: 60rpx;
  bottom:60rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.tagh>view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  
}
.tagh .big{
  width: 108rpx;
  height: 108rpx;
}

.tagli{
  width: 164rpx;
  height: 56rpx;
  color: #fff;
  font-size: 28rpx;
  background: rgba(97,151,240,.8);
  border-radius: 8rpx;
  
  text-align: center;
  line-height: 56rpx;
  margin-right: 30rpx;
}
.small-li{
   padding-right: 7rpx; 
   margin-bottom: 47rpx;
}
.small-li image{
 width: 90rpx;
  height: 90rpx;
}