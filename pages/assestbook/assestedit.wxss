page{
  height: 100%;
  background: #f3f3f5; 
}
.header{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  background: #508cee;
  color: rgba(255,255,255,0.5);
  font-size: 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100
}
.header view{
  height: 96rpx;
  width: 50%;
  text-align: center;
  line-height: 100rpx; 
}
.downline{
    border-bottom: 4rpx solid #fff;
    color:#fff;
}
.basic-msg{
  margin-top: 100rpx;
 
}
.basic-title{
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
  height: 70rpx;
  line-height: 70rpx;
}
.list{
  width: 100%;
  border-bottom: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
  background: #fff;
  overflow: hidden;
}
.list>view{
  min-height: 50rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  padding: 18rpx 30rpx 18rpx 0
}
.list .spailline{
  border-bottom:0;
}
.assest-detail .picture{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.device-img text{
 width: 100%;
 font-size:32rpx;
color:#333;

}
.viewimg{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.viewimg>view{
  position: relative;
}
.list>view image{
  width: 150rpx;
  height: 150rpx;
   margin:30rpx;
   margin-left:0;
   margin-bottom: 0;
}
.list>view .close{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: -1rpx;
  top: -1rpx;
}
.list>view image:nth-child(4){
  margin-right: 0
}
.list .label{
  font-size: 32rpx;
  color: #333;
  width: 21%;
}
.assestli> view{
  display: flex;
  flex-direction: srow;
  width: 100%;
  align-items: center
}
.assestli>view{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.assestli .radio{
    margin-left: 55rpx;
}
.assestli .radio radio {
    font-size: 32rpx;
    margin-right: 20rpx;
}
.content{
  color: #666;
  font-size: 32rpx;
  overflow: hidden;
  width: 68%;
  padding-left: 10%;
  text-align: top;
}
.choose{
  color: #bebebe;
  font-size: 32rpx;
}
.chooseed{
  color: #666;
  font-size: 32rpx;
}
.master{
  width: 12rpx;
  height: 12rpx;
  background: #e00000;
  border-radius: 50%;
  margin-left: 15rpx;
 
}
.footer{
  height: 110rpx;
  background: #fff;
  width: 100%; 
  padding-top: 24rpx;
   position: fixed;
  bottom: 0; 
  z-index: 100;
  border-top: 1rpx solid #e5e5e5;
}
.buttom{
  width: 80%;
  margin: 0 auto;  
}
.loginBtn{
  margin-top: 0
}
.list .assestli:last-child{
  border-bottom: 0
}
.slide-up{
  height: 106rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}
.slide-up text{
  color: #999;
  font-size: 32rpx;
  margin-right: 30rpx;
}
.slide-up image{
 width: 20rpx;
 height: 8rpx;
}
.assest-detail{
  padding-bottom: 145rpx;
}
.assest-detail .more{
  display: none;
}
.longheight{
