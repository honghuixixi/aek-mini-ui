@import "/components/mytotast/mytotast.wxss";
page {
  height: 100%;
  background: #f3f3f5;
}

.head {
    position: relative;
    height: 248rpx;
    color: #fff;
    overflow: hidden;
    background: #508cee;
    padding: 30rpx;
}
.headerback{
  width: 100%;
  height: 100%;
  display: inline-block
}
.head .userName {
    font-size: 34rpx;
}
.head .partname {
    font-size: 34rpx;
}

.head .partname image {
    width: 31rpx;
    height: 31rpx;
    margin-right: 15rpx;
}

.head .statistics {
    position: absolute;
    right: 30rpx;
    bottom: 40rpx;
    left: 30rpx;
    z-index: 1;
    display: flex;
    margin-top: 150rpx;
    font-size: 26rpx;
}

.head .statistics view {
    flex: 1;
    position: relative;
}

.head .statistics navigator {
    flex: 1;
    position: relative;
}

.head .statistics navigator + navigator::before {
    content: "";
    position: absolute;
    top: 16rpx;
    left: 0;
    width: 0;
    height: 50rpx;
    border-left: 1px solid #fff;
}

.head .statistics view::before {
    content: "";
    position: absolute;
    top: 16rpx;
    left: 0;
    width: 0;
    height: 50rpx;
    border-left: 1px solid #fff;
}

.head .statistics text {
    display: block;
    text-align: center;
}

.head .statistics-num {
    font-size: 40rpx;
}

.module {
    overflow: hidden;
}

.module-row {
    display: flex;
}

.module-row-item {
    flex: 1;
    text-align: center;
}

.module-row-item image {
    width: 58rpx;
    height: 58rpx;
     margin: 60rpx auto 10rpx; 
}

.module-row-item text {
    display: block;
     margin-bottom: 60rpx; 
    font-size: 28rpx;
    color: #666;
}

.bkground {
    background: #f7f7fa;
}

.bkground2 {
    background: #508cee;
}

.modal {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal .module-row {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 240rpx;
    background-color: #fff;
}

.modal .module-row image {
    margin: 60rpx auto 20rpx auto;
}

.modal .module-row-item {
    position: relative;
    
}

.modal .module-row-item + .module-row-item::before{
    content: '';
    position: absolute;
    top: 60rpx;
    left: 0;
    width: 0;
    height: 120rpx;
    border-left: 1rpx solid #e5e5e5;
}
.module-row .module-row-item:nth-child(1),.module-row .module-row-item:nth-child(2){
 border-right: 1rpx solid #f2f2f2;
}
.module-row{
  border-bottom: 1rpx solid #f2f2f2;
  background: #fff;
}