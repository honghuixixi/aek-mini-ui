/* pages/polling/submitPolling.wxss */
@import "/components/button/button.wxss";

page {
    background-color: #f3f3f5;
    overflow: hidden;
}

.height30rpx {
    height: 30rpx;
}

.nextDateView {
    display: flex;
    background-color: #fff;
    border-top: 1px solid #dcdcdc;
    border-bottom: 1px solid #dcdcdc;
    flex-direction: row;
    align-items: left;
    line-height: 88rpx;
}

.nextDateTxt {
    padding-left: 36rpx;
    font-size: 28rpx;
    color: #666;
    white-space: nowrap;
}

.palce-class {
    font-size: 28rpx;
    color: #bebebe;
}

.textareaView textarea {
    width: inherit;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    padding-left: 36rpx;
    border: 1px solid #dcdcdc;
    background-color: #fff;
    padding-right: 36rpx;
    height: 106rpx;
}

.textareaView .read {
    height: 140rpx;
    padding: 15rpx 36rpx;
    font-size: 32rpx;
    color: #666;
    background-color: #fff;
    border: 1px solid #dcdcdc;
    overflow: hidden;
}

.textareaTxt {
    line-height: 88rpx;
    font-size: 28rpx;
    padding-left: 30rpx;
    color: #333;
}

.footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    height: 110rpx;
    padding-top: 24rpx;
    background: #fff;
    border-top: 1rpx solid #e5e5e5;
}

/* toaster */

.toaster {
    position: fixed;
    top: 50%;
    left: 20%;
    z-index: 10;
    width: calc(60% - 60rpx);
    margin-top: -30rpx;
    padding: 30rpx;
    font-size: 32rpx;
    line-height: 40rpx;
    color: #fff;
    background-color: rgba(0, 0, 0, 1);
    text-align: center;
    border-radius: 10rpx;
}

.row {
    display: flex;
    font-size: 28rpx;
    background-color: #fff;
    line-height: 100rpx;
    border-bottom: 2rpx solid #dcdcdc;
}

.row-txt {
    width: 206rpx;
    text-align: right;
    margin-right: 40rpx;
}

.row-con {
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.row-arrow {
    width: 25px;
    text-align: center;
    font-size: 32rpx;
    color: #999;
}
