@import "/components/waitDoCard/waitDoCard.wxss";
@import "/components/tabbar/tabbar.wxss";
page{
  height: 100%;
  background: #f3f3f5;
}
.message{
  height: calc(100% - 88rpx);
  padding-top: 88rpx;
}
.announce-show{
  height: 100%;
}
.announce-show>view{
  height: 100%;
}
.header-nav{
  height: 100rpx;
  background: #508cee;
  color: rgba(255,255,255,0.5);
   display: flex;
   position: fixed;
   top: 0;
   left: 0;
   right: 0;
}

.header-nav>view{
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  width: 33.3%;
}
.downline{
    border-bottom: 4rpx solid #fff;
     color:#fff;
}
/* .notice-show,.announce-show{
margin-top: 264rpx;
} */

.notice-show>view,.announce-show>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.notice-show image,.announce-show image{
  width: 135rpx;
  height: 142rpx;
}
.notice-show text,.announce-show text{
  font-size: 32rpx;
  color: #999;
  margin-top: 80rpx;
}
.msgli{
   height: 164rpx;
  border-bottom: 1rpx solid #e5e5e5;
 margin: 0 30rpx;
  width: 100%;
   display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
}

.msgLeft{
  width:90%;
  margin-left: 30rpx;
}
.msgRight{
 
  margin-right: 30rpx;
}
.msgli image{
width: 16rpx;
  height: 25rpx;
}
.msgli .top{
   font-size: 32rpx;
  color: #333;
 
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.msgli .bottom{
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
  margin-right: 40rpx;
}
.bottom .msgContent {
  overflow: hidden;
  width: 142px;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bottom view:first-child{
 float: left
}
.bottom view:last-child{
 float: right
}
.icon{
  background: #f12c20;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
   margin-right: 30rpx;
}
.read{
  /* background: #ebebeb; */
  color: #999;
}
.read .bottom{
    color: #999;
}
.read .content{
    color: #999;
}
 .nomore{
   font-size: 28rpx;
   text-align: center;
   color: #999;
   padding-top: 20rpx;
 }
.pull image{
  width: 42rpx;
  height: 42rpx;
}
.pull{
  margin-bottom: 60rpx;
}
/* toaster */
.toaster {
  background-color: rgba(0, 0, 0, 0.7);
  line-height: 30rpx;
  color: #fff;
  position: fixed;
  z-index: 1;
  left: 50%;
  font-size: 30rpx;
  width: 180rpx;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-left: -90rpx;
  top: 50%;
  margin-top: -30rpx;
}
