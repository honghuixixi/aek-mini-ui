/* pages/PM/editDetail.wxss */
@import "/components/choosemodal/choosemodal.wxss";
@import "/components/loading/loading.wxss";
page{
  height: 100%;
  background: #f3f3f5; 
}
#PM{
  height: 100%;
}
.overhidden{
  overflow: hidden;
}
.block {
  color: #333;
  background-color: #fff;
  overflow: hidden;
}
.font30 {
  font-size: 30rpx;
}
.m-t-15 {
  margin-top: 15rpx;
}
.p-t-25 {
  padding-top: 25rpx;
}
.m-t-30 {
  margin-top: 30rpx;
}
.p-b-25 {
  padding-bottom: 25rpx;
}
.m-b-30 {
  margin-bottom: 30rpx;
}
.font28 {
  font-size: 28rpx;
}
.font26 {
  font-size: 26rpx;
}
.font22 {
  font-size: 24rpx;
}
.b-t-999 {
  border-top: 1rpx solid #999;
}
.b-b-999 {
  border-bottom: 1rpx solid #999;
}
.height30 {
  height: 30rpx;
}
.height130 {
  height: 130rpx;
}
.content {
  padding: 0rpx 30rpx;
}
.line {
  line-height: 88rpx;
  border-bottom: 1rpx solid #999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.head {
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.head text {
  color: #D70000;
}
.body {
  text-align: right;
  white-space: nowrap;
  padding-left: 30rpx;
}
.body .next {
  width: 16rpx;
  margin-left: 10rpx;
  height: 25rpx;
}
.color666 {
  color: #666;
}
.color999 {
  color: #999;
}
.colorfff {
  color: #fff;
}
.title {
  background-color: #f3f3f5;
  border-bottom: 1rpx solid #999;
  color: #888;
  line-height: 40rpx;
  padding-top: 20rpx;
}
textarea {
  font-size: 21rpx;
  width: 100%;
  height: 120rpx;
}
radio-group {
    margin: 10rpx 0;
}
.remarksView {
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}
.timeUnit {
  float: right;
  display: inline-block;
}
.workTime {
  display: inline-block;
  width: 300rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.minWidth200 {
  min-width: 130rpx;
  padding-right: 30rpx;
}
.place {
  color: #999;
  font-size: 26rpx;
}
.placeRemarks {
  line-height: 60rpx;
  font-size: 24rpx;
}
.remarkInput {
  line-height: 60rpx;
  font-size: 24rpx;
  height: 60rpx;
}
.operate {
  align-items:center;
  background-color: #fff;
  border-top: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  z-index: 5;
  height: 110rpx;
  display: flex;
  justify-content: space-around;
}
.btn {
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  border-radius: 10rpx;
  text-align: center;
  border: 1rpx solid #6096EF;
}
.submit {
  background-color: #6096EF;
}
/* confirm 弹框 */
.planConfirmWrap {
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 1;
  top: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
}
.planConfirmWrap .planConfirm {
  background-color: #fff;
  border-radius: 10rpx;
  width: 80%;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  overflow: hidden;
  position: absolute;
  float: left;
  left: 10%;
  top: 50%;
   margin-top: -80rpx; 
}
.planConfirmWrap .planConfirmView {
  color: #333;
  line-height: 50rpx;
  margin: 20rpx 0rpx;
}
.planConfirmCon {
  line-height: 30rpx;
  text-align: left;
  padding-left: 30rpx;
}
.confirmDate {
  border: 1rpx solid #bfbfbf;
  margin: 30rpx;
  line-height: 50rpx;
  text-align: left;
}
.confirmDate .picker {
  padding-left: 10rpx;
}
.planConfirmBtns {
  border-top: 1rpx solid #BFBFBF;
  position: relative;
}
.planConfirmBtns .planConfirmBtn {
  width: 50%;
  float: left;
  line-height: 84rpx;
}
.planConfirmBtns .planConfirmLine {
  position: absolute;
  left: 50%;
  top: 0rpx;
  border-left: 1rpx solid #BFBFBF;
}
.planConfirmBtn1 {
  background-color: rgba(96,150,239,.36);
  border-bottom-right-radius: 10rpx;
}
/* END confirm */
.mast{
  width: 12rpx;
  color: #e00000;
  position: absolute;
  right: -20rpx;
  top: 10rpx;
}
.mast-parent{
  position: relative;
}
.fujian{
  width: 32rpx;
  height: 36rpx;
  margin: 0;
}
.fujianimg{
  width: 30rpx;
  height: 30rpx;
  margin-top: 28rpx;
}
.assestli> view {
    display: flex;
    flex-direction: srow;
    width: 100%;
    align-items: center;
}

.assestli>view {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    /* justify-content: center; */
}
/* toaster */
.toaster {
  background-color: rgba(0, 0, 0, 0.7);
  line-height: 30rpx;
  color: #fff;
  position: fixed;
  z-index: 1;
  left: 50%;
  font-size: 30rpx;
  width: 180rpx;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-left: -90rpx;
  top: 50%;
  margin-top: -30rpx;
}
.asset-list {
    display: flex;
    padding-bottom: 16rpx;
}
.asset-file {
    position: relative;
    float: left;
    width: 170rpx;
    height: 170rpx;
    margin: 16rpx 0 0 16rpx;
}
.asset-file image {
    width: 100%;
    height: 100%;
}
.asset-file text {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 48rpx;
    color: #f00;
}