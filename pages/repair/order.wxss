@import "/components/loading/loading.wxss";
page{
  height: 100%;
  background: #f3f3f5;
  width: 100%;  
}
.order{
  height: 100%;
}
.ordertime{
  height: 135rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5; 
}
.ordertime image{
  width: 16rpx;
  height: 25rpx;
} 
.label{
  width: 23%;
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
}
.content{
  width: 77%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.content text{
  width: 90%;
  margin-left: 10%;
  color: #bebebe;
  font-size: 32rpx;
}
.write{
  background: #fff;
  margin: 20rpx 0;
  padding: 30rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
textarea{
  height: 290rpx;
}