page{
  height: 100%;
  background: #f3f3f5;
  width: 100%;
}
.search{
  height: 88rpx;
  background: #508cee;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.input{
  height: 64rpx;
  width: 500rpx;
  border-radius: 32rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  align-items: center;
  padding-left: 25rpx;
  padding-right: 25rpx;
 
}
.input image{
  width: 35rpx;
  height: 35rpx;
   margin-right: 20rpx;
  }
.choose image{
  width: 27rpx;
  height:25rpx;
}
.choose text{
  font-size: 32rpx;
  color: #fff;
  margin-right: 12rpx;
  margin-left: 22rpx;
}
.palce-class{
  font-size: 28rpx;
  color: #bebebe;
}
.title{
  height: 78rpx;
  font-size: 28rpx;
  color: #999;
  padding-left: 30rpx;
  line-height: 78rpx;
}
.list{
  padding-left: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
}
.li{
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-right: 30rpx;
  height: 87rpx;
}
.li image:first-child{
  width: 28rpx;
  height: 28rpx;
}
.li image:last-child{
  width: 16rpx;
  height: 25rpx;
}
.li text{
  font-size: 32rpx;
  color: #333;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 0 20rpx;
}
.list .li:last-child{
  border-bottom: 0;
}
.delect{
  margin-top:20rpx; 
  height: 86rpx;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.delect image{
  width: 26rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.delect text{
  font-size: 32rpx;
  color: #999;
}